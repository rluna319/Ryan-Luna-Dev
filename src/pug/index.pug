                // Contact Section Form
                .row.justify-content-center
                    .col-lg-8.col-xl-7
                        form#contactForm(action="https://formspree.io/f/xvgpndkb", method="POST", novalidate)
                            // Name input
                            .form-floating.mb-3
                                input#name.form-control(
                                    type='text',
                                    placeholder='Enter your name...',
                                    required
                                    autocomplete='name'
                                )
                                label(for='name') Full name
                                .invalid-feedback
                                    | A name is required.

                            // Email address input
                            .form-floating.mb-3
                                input#email.form-control(
                                    type='email',
                                    placeholder='name@example.com',
                                    required
                                    autocomplete='email'
                                )
                                label(for='email') Email address
                                .invalid-feedback
                                    | A valid email is required.

                            // Phone number input (optional)
                            .form-floating.mb-3
                                input#phone.form-control(
                                    type='tel',
                                    placeholder='(123) 456-7890',
                                    autocomplete='tel'
                                )
                                label(for='phone') Phone number (optional)

                            // Message input
                            .form-floating.mb-3
                                textarea#message.form-control(
                                    placeholder='Enter your message here...',
                                    style='height: 10rem;',
                                    required
                                    autocomplete='off'
                                )
                                label(for='message') Message
                                .invalid-feedback
                                    | A message is required.

                            // Recruiter question
                            .form-floating.mb-3
                                .d-flex.align-items-center
                                    label.form-label.me-3(for='recruiter-yes') Are you a recruiter?
                                    .form-check.form-check-inline
                                        input.form-check-input#recruiter-yes(
                                            type='radio',
                                            name='recruiter',
                                            value='yes',
                                            required
                                        )
                                        label.form-check-label(for='recruiter-yes') Yes
                                    .form-check.form-check-inline
                                        input.form-check-input#recruiter-no(
                                            type='radio',
                                            name='recruiter',
                                            value='no',
                                            checked,
                                            required
                                        )
                                        label.form-check-label(for='recruiter-no') No
                                // Company field, visible when 'Yes' is selected
                                .collapse#companyField(aria-hidden='true')
                                    .form-floating.mb-3
                                        input#company.form-control(
                                            type='text',
                                            placeholder='Enter your company...',
                                            required,
                                            disabled,
                                            autocomplete='organization'
                                        )
                                        label(for='company') Company or Business Name
                                        .invalid-feedback
                                            | A company or business name is required.
                            
                            // Hidden Subject
                            input#subject.form-control(
                                type='hidden',
                                name='_subject',
                                value='[Formspree] Form Submission'
                            )

                            // Submit Button
                            button#submitButton.btn.btn-primary.btn-xl(type='submit') Send

